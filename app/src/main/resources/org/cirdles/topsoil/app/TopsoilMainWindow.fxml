<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<?import org.cirdles.topsoil.app.table.TsvTable?>
<?import org.cirdles.topsoil.app.TopsoilMainWindow?>

<fx:root type="org.cirdles.topsoil.app.TopsoilMainWindow"
         prefHeight="800"
         prefWidth="1200"
         xmlns:fx="http://javafx.com/fxml/1">
    <MenuBar useSystemMenuBar="true" >
        <Menu text="%fileMenu">
            <MenuItem text="%importFromCSV"
                      onAction="#importFromCSV" />
            <MenuItem text="%importFromTSV"
                      onAction="#importFromTSV" />
        </Menu>

        <Menu text="Plots" fx:id="plotsMenu">
            <MenuItem text="Evolution Plot"
                      onAction="#createEvolutionPlot" />
            <MenuItem text="Scatter Plot"
                      onAction="#createScatterPlot" />
            <MenuItem text="Uncertainty Ellipse Plot"
                      onAction="#createUncertaintyEllipsePlot" />
        </Menu>

        <Menu text="Datasets" fx:id="datasetsMenu"/>

        <Menu text="Help" fx:id="helpMenu">
            <MenuItem text="About"
                      onAction="#openAboutDialog"/>
            <MenuItem text="Documentation"
                      onAction="#openDocumentationLink"  />
            <MenuItem text="Issues"
                      onAction="#openIssuesLink" />
        </Menu>
    </MenuBar>

    <ToolBar>
        <Button text="Create Data Table"
                onAction="#createDataTable" />
        <Button text="Save Data Table"
                onAction="#saveDataTable"
                disable="true"
                fx:id="saveDataTableButton" />
        <Button text="%clearTableMessage"
                onAction="#emptyTable"
                disable="true"
                fx:id="emptyTableButton" />

    </ToolBar>

    <TabPane fx:id="dataTableTabPane"
             VBox.vgrow="ALWAYS" />
</fx:root>
