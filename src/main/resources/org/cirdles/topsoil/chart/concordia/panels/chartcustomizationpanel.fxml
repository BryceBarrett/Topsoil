<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.cirdles.topsoil.LabelUsePrefSize ?>
<?import org.cirdles.jfxutils.NumberField ?>

<fx:root xmlns:fx="http://javafx.com/fxml"
         type="javafx.scene.layout.VBox"
         spacing="5">
    <fx:define>
        <ToggleGroup fx:id="concordiaLineToggleGroup" /> 
    </fx:define>
    
    <LabelUsePrefSize text="%tickerNodeSubsectionTitle" styleClass="title-subpanel"/>
    <HBox spacing="5" >
        <LabelUsePrefSize text="%concordialineOpacityLabel"/>
        <RadioButton text="Wetherill"
                     userData="Wetherill"
                     toggleGroup="$concordiaLineToggleGroup" />
        <RadioButton text="Tera-Wasserburg"
                     userData="Tera-Wasserburg"
                     toggleGroup="$concordiaLineToggleGroup" />
        <RadioButton text="None"
                     userData="None"
                     toggleGroup="$concordiaLineToggleGroup"
                     selected="true"/>
    </HBox>
    <LabelUsePrefSize text="%tickerNodeSubsectionTitle" styleClass="title-subsubpanel"/>
    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints halignment="CENTER" />
        </columnConstraints>
            
        <!-- Row 0 -->
        <LabelUsePrefSize text="%anchorTickLabel" fx:id="anchorTickLabel" 
                          GridPane.columnIndex="3" GridPane.rowIndex="0"/>
        <LabelUsePrefSize text="%tickUnitLabel" fx:id="tickUnitLabel"
                          GridPane.columnIndex="2" GridPane.rowIndex="0"/>
        <LabelUsePrefSize text="%autoTickLabel" 
                          GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <!-- Row 1-->
        <LabelUsePrefSize text="%axisxLabel"
                          GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <NumberField fx:id="tickXnf"
                     GridPane.columnIndex="3" GridPane.rowIndex="1" />
        <NumberField fx:id="tickUnitXnf"
                     GridPane.columnIndex="2" GridPane.rowIndex="1"/>
        <CheckBox fx:id="autoTickXCheckBox"
                  GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <!-- Row 2 -->
        <LabelUsePrefSize text="%axisyLabel"
                          GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <NumberField fx:id="tickYnf"
                     GridPane.columnIndex="3" GridPane.rowIndex="2"/>
        <NumberField fx:id="tickUnitYnf"
                     GridPane.columnIndex="2" GridPane.rowIndex="2"/>
        <CheckBox fx:id="autoTickYCheckBox"
                  GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    </GridPane>
</fx:root>
